  <nav>
    <div class="nav-container">
      <div class="logo">⚔ JRPG MENU</div>
      <div class="menu-toggle" id="menu-toggle">
        <span></span>
        <span></span>
        <span></span>
      </div>
      <ul id="menu">
        <li><a href="#" class="active">Items</a></li>
        <li><a href="#">Magic</a></li>
        <li><a href="#">Equip</a></li>
        <li><a href="#">Status</a></li>
        <li><a href="#">Save</a></li>
      </ul>
